generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  minPriceCOP Float  @default(0)
  minPriceUSD Float  @default(0)
  puppies   Puppy[]

  @@map("categories")
}

model Puppy {
  id              Int      @id @default(autoincrement())
  name            String
  description_es  String   @default("")
  description_en  String   @default("")
  birthDate       DateTime
  gender          String   @default("male") 
  categoryId      Int
  fatherImage     String?
  motherImage     String?
  available       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  media           PuppyMedia[]

  @@map("puppies")
}

model PuppyMedia {
  id        Int      @id @default(autoincrement())
  puppyId   Int
  mediaUrl  String
  mediaType String
  createdAt DateTime @default(now())
  puppy     Puppy    @relation(fields: [puppyId], references: [id], onDelete: Cascade)

  @@map("puppy_media")
}