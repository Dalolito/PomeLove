generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  minPriceCOP Float  @default(0)
  minPriceUSD Float  @default(0)
  puppies   Puppy[]

  @@map("categories")
}

model Puppy {
  id              Int      @id @default(autoincrement())
  name            String   @db.VarChar(255)
  description_es  String   @db.VarChar(1000)
  description_en  String   @db.VarChar(1000)
  
  // New age fields
  ageYears        Int      @default(0)
  ageMonths       Int      @default(0)
  
  // Keep for compatibility during migration
  birthDate       DateTime?
  
  gender          String   @db.VarChar(10) @default("male") 
  categoryId      Int
  fatherImage     String?  @db.VarChar(500)
  motherImage     String?  @db.VarChar(500)
  available       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  media           PuppyMedia[]

  @@map("puppies")
}

model PuppyMedia {
  id        Int      @id @default(autoincrement())
  puppyId   Int
  mediaUrl  String   @db.VarChar(500)
  mediaType String   @db.VarChar(50)
  createdAt DateTime @default(now())
  puppy     Puppy    @relation(fields: [puppyId], references: [id], onDelete: Cascade)

  @@map("puppy_media")
}